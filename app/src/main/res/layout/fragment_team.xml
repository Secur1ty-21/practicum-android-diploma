<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftGL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/padding_16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightGL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constrainedWidth="true"
        app:layout_constraintGuide_end="@dimen/padding_16dp" />


    <TextView
        android:id="@+id/teamTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_20dp"
        android:fontFamily="@font/ys_display_medium"
        android:paddingBottom="@dimen/padding_8dp"
        android:text="@string/nav_team"
        android:textColor="?attr/teamTextColor"
        android:textSize="@dimen/tv_vacancy_title_size"
        app:layout_constraintStart_toEndOf="@id/leftGL"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/appWorkTextView"
        android:textColor="?attr/teamTextColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_24dp"
        android:fontFamily="@font/ys_display_bold"
        android:paddingBottom="@dimen/padding_8dp"
        android:text="@string/best_people"
        android:textSize="@dimen/tv_team_header_size"
        app:layout_constraintStart_toEndOf="@id/leftGL"
        app:layout_constraintTop_toBottomOf="@id/teamTextView" />

    <TextView
        android:id="@+id/dev1TextView"
        style="@style/developerItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_24dp"
        android:paddingBottom="@dimen/padding_8dp"
        android:text="@string/denis"
        app:layout_constraintStart_toEndOf="@id/leftGL"
        app:layout_constraintTop_toBottomOf="@id/appWorkTextView" />

    <TextView
        android:id="@+id/dev2TextView"
        style="@style/developerItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_8dp"
        android:paddingBottom="@dimen/padding_8dp"
        android:text="@string/pavel"
        app:layout_constraintStart_toEndOf="@id/leftGL"
        app:layout_constraintTop_toBottomOf="@id/dev1TextView" />

    <TextView
        android:id="@+id/dev3TextView"
        style="@style/developerItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_8dp"
        android:paddingBottom="@dimen/padding_8dp"
        android:text="@string/sergey"
        app:layout_constraintStart_toEndOf="@id/leftGL"
        app:layout_constraintTop_toBottomOf="@id/dev2TextView" />

    <TextView
        android:id="@+id/dev4TextView"
        style="@style/developerItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_8dp"
        android:paddingBottom="@dimen/padding_8dp"
        android:text="@string/victor"
        app:layout_constraintStart_toEndOf="@id/leftGL"
        app:layout_constraintTop_toBottomOf="@id/dev3TextView" />

</androidx.constraintlayout.widget.ConstraintLayout>
